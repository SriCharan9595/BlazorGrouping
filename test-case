// Using statements
using Xunit;
using Moq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc;

// Test class
public class CashSummaryControllerTests
{
    // Test method
    [Fact]
    public async Task GetCashSummary_ReturnsExpectedDataEnvelope()
    {
        // Arrange
        var request = new LazyLoadRequest
        {
            PageSize = 10,
            Skip = 0,
            PortfolioValue = "test",
            UserName = "testuser"
        };
        
        var expectedDataEnvelope = new DataEnvelope<CashSummary>
        {
            TotalItemCount = 2,
            CurrentPageData = new List<CashSummary>
            {
                new CashSummary { Account = "Test Account 1", Balance = 100.0 },
                new CashSummary { Account = "Test Account 2", Balance = 200.0 }
            }
        };

        var mockService = new Mock<ICashSummaryServices>();
        mockService.Setup(s => s.GetCashSummary(request))
            .ReturnsAsync(expectedDataEnvelope);

        var controller = new CashSummaryController(mockService.Object);

        // Act
        var result = await controller.GetCashSummary(request);

        // Assert
        var okResult = Assert.IsType<OkObjectResult>(result);
        var actualDataEnvelope = Assert.IsType<DataEnvelope<CashSummary>>(okResult.Value);
        Assert.Equal(expectedDataEnvelope.TotalItemCount, actualDataEnvelope.TotalItemCount);
        Assert.Equal(expectedDataEnvelope.CurrentPageData, actualDataEnvelope.CurrentPageData);
    }
}




